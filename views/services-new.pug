extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      legend New Service
      form(action="#", id="new-service")
        .form-group
            label Title*
            input.form-control(name="title" required)
        .form-group
            label Duration (Days)*
            input.form-control(name="duration" required) 
        .form-group
            label Rectangular Image URL*
            input.form-control(name="picUrl" required type="url") 
        .form-group
            label Square Image URL*
            input.form-control(name="picUrlSq" required type="url")   
        .form-group
            label Description*
            textarea.form-control(name="description" required)   
        button(type="submit").btn.btn-primary Save